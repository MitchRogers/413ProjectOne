<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjectOne</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body class="text-center" style="background-color: floralwhite; margin:2rem;">
    <!-- create a navbar for navigation to Home, Signup, and Appointments page -->
    <nav class="navbar navbar-expand-lg trans-navbar" style="height: 40px;">
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto" style="margin-right: 20px;">
                    <li class="nav-item" style="margin: 0 15px;">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item" style="margin: 0 15px;">
                        <a class="nav-link" asp-controller="Home" asp-action="SignUp">Schedule a Tour</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="ViewAppointment">View Appointments</a>
                    </li>
                </ul>
            </div>
        </nav>

    <!-- Renders html text from other views -->
    @RenderBody()
</body>
</html>
