@model AppointmentsViewModel
    <!--available time slot model here in-->
    <!--This view will be the Sign Up page. It will display the available
        times and allow users to select a time.-->


    <h3>Available tour time slots:</h3>
    <br /><br />
    <p>Please select an available time slot below.</p>

    
    <a asp-action="Form" asp-controller="Home" >Schedule a tour</a>


    <table class="table table-bordered table-striped">
