            <tr>
                <th class="text-center">Day</th>
                <th class="text-center">Time</th>
                <th class="text-center">Schedule</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model.Monday)
            {

                if (x.IsAvailable == true)

                {

                    <tr>
                        <td class="text-center">@x.Day</td>
                        <td class="text-center">@x.Time</td>
                        <td>
                            <!--Copy and paste this into all days-->
                            <form method="post" asp-action="AppointmentView??">
                                <input type="hidden" name="TimeSlotId" value="@x.TimeSlotId" />
                                <button type="submit" class="btn-success btn-small">Schedule tour</button>
                            </form>
                        </td>
