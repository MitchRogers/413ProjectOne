<!--This view will be the Sign Up page. It will display the available times and allow users to select a time.-->

<!--Bring in the AppointmentsViewModel-->
@model AppointmentsViewModel

<h3>Available tour time slots:</h3>
<br />
<br />
<p>Please select an available time slot below.</p>

<!--Create a table that will display the time slots where the IsAvailable variable == true. The table will sort by day (Monday-Friday
    and have a button next to each time slot to schedule that specific day and time-->
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <!--Table header: Day | Time | Schedule-->
            <th class="text-center">Day</th>
            <th class="text-center">Time</th>
            <th class="text-center">Schedule</th>
        </tr>
    </thead>
    <tbody>
        <!--Time slots for Monday. For loop will go through each seed data time and display it IF the IsAvailable ==true-->
        @foreach (var x in Model.Monday)
        {

            if (x.IsAvailable == true)

            {

                <tr>
                    <td class="text-center">@x.Day</td>
                    <td class="text-center">@x.Time</td>
                    <td>
                        <form method="post" asp-action="SignUp">
                            <input type="hidden" name="TimeSlotId" value="@x.TimeSlotId" />
                            <button type="submit" class="btn-success btn-small">Schedule tour</button>
                        </form>
                    </td>
                </tr>

            }
        }
